<% if @port != 80 -%>
   Listen <%= @port %>
<% end -%>

<VirtualHost *:<%= @port %>>
    ServerAdmin webmaster@localhost

    DocumentRoot <%= @document_root %>
    <Directory />
      Options FollowSymlinks
      AllowOverride Node
    </Directory>

    <Directory <%= @document_root %> >
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from allow
        Require all granted
    </Directory>
    
</VirtualHost>
